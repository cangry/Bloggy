
<% @tags.each do |tag| %>
<span type="button" class="btn btn-danger">
  <%= link_to tag.tag, blogs_path(title: tag.tag) %>
</span>
<% end %>



<h1>Blog</h1>
    <% @blogs.each do |blog| %>
      <div class="page-header">
        <h2><%= blog.title %></h2>
          <h3><small><%= blog.created_at.strftime("%B %d, %Y") %></small></h3>
         
         <div>
        <%= blog.content %>
         </div>
         <div>
        <%= link_to 'Show', blog %>
        <%= link_to 'Edit', edit_blog_path(blog) %>
        <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
  <%= link_to 'New Blog', new_blog_path %>
  <hr/>
 

